# FindersKeepers v2 Environment Configuration
# Copy this file to .env and update with your actual values

# ==============================================================================
# DOCKER HUB CREDENTIALS (REQUIRED)
# ==============================================================================
DOCKER_USERNAME=bitcainnet
DOCKER_TOKEN=your_docker_hub_token_here

# ==============================================================================
# DATABASE PASSWORDS (CHANGE ALL OF THESE IN PRODUCTION!)
# ==============================================================================
POSTGRES_PASSWORD=fk2025secure
POSTGRES_DB=finderskeepers_v2
POSTGRES_USER=finderskeepers

NEO4J_PASSWORD=fk2025neo4j

# ==============================================================================
# SECURITY KEYS (CHANGE THESE!)
# ==============================================================================
SESSION_SECRET=change_this_to_a_random_string_at_least_32_chars_long
N8N_JWT_SECRET=change_this_to_another_random_string_for_n8n_jwt

# ==============================================================================
# N8N AUTHENTICATION (CHANGE THESE!)
# ==============================================================================
N8N_BASIC_AUTH_USER=admin@bitcain.net
N8N_BASIC_AUTH_PASSWORD=change_this_password

# ==============================================================================
# TIMEZONE CONFIGURATION
# ==============================================================================
TZ=America/Chicago
TIMEZONE=America/Chicago

# ==============================================================================
# OPTIONAL AI API KEYS (Leave empty if using local LLM only)
# ==============================================================================
OPENAI_API_KEY=
GOOGLE_API_KEY=
ANTHROPIC_API_KEY=

# ==============================================================================
# NODE ENVIRONMENT
# ==============================================================================
NODE_ENV=development

# ==============================================================================
# FRONTEND CONFIGURATION
# ==============================================================================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_NEO4J_URI=bolt://localhost:7687
VITE_NEO4J_USER=neo4j
VITE_NEO4J_PASSWORD=fk2025neo4j
VITE_QDRANT_URL=http://localhost:6333

# Admin Dashboard Features
VITE_ADMIN_ENABLED=true
VITE_BULK_PROCESSING_ENABLED=true
VITE_QUEUE_MAINTENANCE_ENABLED=true
VITE_PROCESSING_STATS_ENABLED=true

# ==============================================================================
# BACKGROUND PROCESSING CONFIGURATION
# ==============================================================================
# These settings control automatic document processing
FK2_ENABLE_BACKGROUND_PROCESSING=true
FK2_PROCESSING_INTERVAL_MINUTES=5
FK2_PROCESSING_BATCH_SIZE=10
FK2_PROCESSING_MAX_RETRIES=3
FK2_PROCESSING_START_DELAY_SECONDS=30

# ==============================================================================
# ENABLE AUTOMATIC CONVERSATION PROCESSING
# ==============================================================================
ENABLE_AUTO_PROCESSING=true
AUTO_PROCESS_CONVERSATIONS=true
PROCESS_BATCH_SIZE=10
EMBEDDING_DIMENSIONS=1024

# ==============================================================================
# MCP SERVER CONFIGURATION (for Claude Desktop)
# ==============================================================================
FINDERSKEEPERS_PROJECT=finderskeepers-v2
FINDERSKEEPERS_USER=bitcain
LOG_LEVEL=INFO

# ==============================================================================
# DOCKER BUILD CONFIGURATION
# ==============================================================================
BUILDX_BUILDER=
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true
