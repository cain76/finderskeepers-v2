# FindersKeepers v2 Environment Configuration
# Copy this file to .env and set your secure passwords

# CRITICAL SECURITY NOTE:
# Replace ALL placeholder values with secure passwords before deployment!
# Never use default passwords in production environments.
# Generate secure passwords: openssl rand -base64 32

# Database Configuration
POSTGRES_DB=finderskeepers_v2
POSTGRES_USER=finderskeepers
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://finderskeepers:your_secure_postgres_password_here@postgres:5432/finderskeepers_v2

# Neo4j Configuration 
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_neo4j_password_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Qdrant Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key_if_needed

# AI Service URLs
OLLAMA_URL=http://ollama:11434
EMBEDDING_MODEL=mxbai-embed-large
CHAT_MODEL=llama3:8b

# External API Keys (optional)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_API_KEY=your_google_api_key

# n8n Configuration (DEPRECATED - not required for core functionality)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_n8n_password_here
N8N_JWT_SECRET=your_secure_jwt_secret_replace_with_your_own

# Docker URLs (for container-to-container communication)
POSTGRES_URL=postgresql://finderskeepers:your_secure_postgres_password_here@postgres:5432/finderskeepers_v2