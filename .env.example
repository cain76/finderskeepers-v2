# FindersKeepers v2 Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================

# N8N Authentication
N8N_BASIC_AUTH_USER=your_email@example.com
N8N_BASIC_AUTH_PASSWORD=your_secure_password_here

# JWT Secret for N8N (generate a secure random string)
N8N_JWT_SECRET=your_jwt_secret_here

# Session secret for FastAPI (generate with: openssl rand -base64 32)
SESSION_SECRET=your_session_secret_here

# ===========================================
# DATABASE CREDENTIALS
# ===========================================

# PostgreSQL Database
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_USER=finderskeepers
POSTGRES_DB=finderskeepers_v2

# Neo4j Database
NEO4J_PASSWORD=your_neo4j_password_here

# ===========================================
# API KEYS (Optional - for cloud AI services)
# ===========================================

# OpenAI API (optional, for GPT models)
OPENAI_API_KEY=sk-your-openai-key-here

# Google API Key (optional, for Gemini models) 
GOOGLE_API_KEY=your-google-api-key-here

# Anthropic API Key (optional, for Claude models)
ANTHROPIC_API_KEY=your-anthropic-key-here

# ===========================================
# DOCKER REGISTRY (Optional)
# ===========================================

# Docker Hub credentials for private images
DOCKER_USERNAME=your_docker_username
DOCKER_TOKEN=your_docker_token_here

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Timezone (adjust for your location)
TZ=America/Chicago
TIMEZONE=America/Chicago

# Local LLM Configuration
USE_LOCAL_LLM=true
EMBEDDING_MODEL=mxbai-embed-large
CHAT_MODEL=llama3:8b

# Processing Settings
ENABLE_AUTO_PROCESSING=true
AUTO_PROCESS_CONVERSATIONS=true
PROCESS_BATCH_SIZE=10

# Background Processing
FK2_ENABLE_BACKGROUND_PROCESSING=true
FK2_PROCESSING_INTERVAL_MINUTES=5
FK2_PROCESSING_BATCH_SIZE=10
FK2_PROCESSING_MAX_RETRIES=3
FK2_PROCESSING_START_DELAY_SECONDS=30

# ===========================================
# SECURITY NOTES
# ===========================================
# 
# 1. NEVER commit the actual .env file to version control
# 2. Use strong, unique passwords for all services
# 3. Generate random JWT secrets using: openssl rand -base64 32
# 4. Consider using a password manager for credential storage
# 5. Regularly rotate API keys and passwords
# 6. Restrict access to this file (chmod 600 .env)
#